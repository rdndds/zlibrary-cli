# Z-Library CLI Configuration
# Copy this file to .env and fill in your values

# ========================================
# Authentication
# ========================================
# Z-Library account credentials (optional)
# If provided, will automatically login and save cookies
ZLIB_EMAIL=your_email@example.com
ZLIB_PASSWORD=your_password

# ========================================
# File Paths
# ========================================
# Path to cookies file (Netscape format)
ZLIB_COOKIES_FILE=data/cookies.txt

# Directory to save downloaded books
ZLIB_DOWNLOAD_DIR=books

# Path to download index/history file
ZLIB_DOWNLOAD_INDEX_FILE=data/download_index.json

# ========================================
# Search & Download Settings
# ========================================
# Maximum number of search result pages to fetch
ZLIB_MAX_PAGES=5

# Default number of search results to return
ZLIB_DEFAULT_SEARCH_LIMIT=10

# ========================================
# Network Settings
# ========================================
# Connection timeout in seconds (fast fail for unreachable servers)
ZLIB_CONNECT_TIMEOUT=10

# Read timeout in seconds (for large file downloads)
ZLIB_READ_TIMEOUT=300

# Request timeout in seconds (backward compatibility)
ZLIB_REQUEST_TIMEOUT=30

# Maximum number of retries for failed requests
ZLIB_MAX_RETRIES=3

# Delay between retries in seconds
ZLIB_RETRY_DELAY=1

# Custom User-Agent string (optional)
# ZLIB_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ========================================
# Download Performance Settings
# ========================================
# Download chunk size in bytes (default: 65536 = 64KB)
# Larger = faster but more memory usage
# 65536 (64KB) - Good balance
# 131072 (128KB) - Faster for high-speed connections
# 262144 (256KB) - Maximum speed but more memory
ZLIB_CHUNK_SIZE=65536

# Maximum concurrent downloads for bulk operations
ZLIB_MAX_WORKERS=3

# ========================================
# Logging Settings
# ========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
ZLIB_LOG_LEVEL=INFO

# Log file path
ZLIB_LOG_FILE=logs/zlibrary.log

# Enable/disable console logging (true/false)
ZLIB_LOG_TO_CONSOLE=true

# Enable/disable file logging (true/false)
ZLIB_LOG_TO_FILE=true

# Maximum log file size in bytes (default: 10MB)
ZLIB_LOG_MAX_BYTES=10485760

# Number of backup log files to keep
ZLIB_LOG_BACKUP_COUNT=5
